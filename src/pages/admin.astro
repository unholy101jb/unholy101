---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Admin">
  <h1 style="text-align: center; color: white; margin-bottom: 2rem;">Campaign Manager</h1>

  <form style="max-width: 600px; margin: 0 auto; display: flex; flex-direction: column; gap: 1rem;"
        onsubmit="event.preventDefault(); alert('Form submission not functional yet.')">
    
    <label style="color: #ccc;">Title
      <input type="text" name="title" required style="width: 100%; padding: 0.5rem;" />
    </label>
    
    <label style="color: #ccc;">Image URL
      <input type="text" name="image" style="width: 100%; padding: 0.5rem;" />
    </label>
    
    <label style="color: #ccc;">Description
      <textarea name="description" rows="5" style="width: 100%; padding: 0.5rem;"></textarea>
    </label>
    
    <label style="color: #ccc;">Products (JSON format)
      <textarea name="products" rows="6" style="width: 100%; padding: 0.5rem;" placeholder='[{"name": "...", "image": "...", "link": "..."}]'></textarea>
    </label>
    
    <button type="submit" style="padding: 0.75rem; background: #0cf; color: black; font-weight: bold;">
      Add Campaign
    </button>
  </form>
</MainLayout>