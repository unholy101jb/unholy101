---
import MainLayout from '../layouts/MainLayout.astro'
---

<style>
  .section {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
    background-color: #111;
    border-radius: 12px;
  }
  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }
  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  input, textarea, button {
    padding: 0.8rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
  }
  input, textarea {
    background-color: #222;
    color: white;
  }
  button {
    background-color: white;
    color: black;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s;
  }
  button:hover {
    background-color: #ccc;
  }
</style>

<MainLayout title="Join Us">
  <div class="section">
    <h1>Join Us</h1>

    <h2>Subscribe</h2>
    <p>Be part of Unholy101. Get updates, stories and truth straight to your inbox.</p>
    <form>
      <input type="email" placeholder="Your email" required />
      <button type="submit">Subscribe</button>
    </form>

    <h2 style="margin-top: 3rem">Contact</h2>
    <p>Want to collaborate, invite us or just say hello?</p>
    <form>
      <input type="text" placeholder="Your name" required />
      <input type="email" placeholder="Your email" required />
      <textarea rows="4" placeholder="Your message" required></textarea>
      <button type="submit">Send</button>
    </form>
  </div>
</MainLayout>