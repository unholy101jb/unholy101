---
import MainLayout from '../layouts/MainLayout.astro'
---

<style>
  h1 {
    text-align: center;
    margin-bottom: 2rem;
    color: white;
  }

  .grid {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .card {
    width: 250px;
    background-color: #111;
    border-radius: 10px;
    padding: 1rem;
    color: white;
    text-align: center;
  }

  .card img {
    width: 100%;
    border-radius: 6px;
  }

  h2 {
    margin-top: 1rem;
    font-size: 1.2rem;
  }

  p {
    font-size: 0.9rem;
    color: #ccc;
  }
</style>

