---
import MainLayout from '../layouts/MainLayout.astro';

const campaigns = [
  {
    id: "christ-love",
    name: "Christ Was About Love",
    products: [
      {
        title: "Christ Was About Love Tee",
        img: "/campaign1.jpeg",
        description: "Minimalist, bold, and unapologetic. Wear your protest.",
        link: "https://yourshoplink.com",
      },
      {
        title: "Christ Was About Love Hat",
        img: "/campaign2.jpg",
        description: "A statement you wear on your forehead. Literally.",
        link: "https://yourshoplink.com",
      }
    ]
  },
  {
    id: "unholy-core",
    name: "What is Unholy101?",
    products: [
      {
        title: "UNHOLY Logo Sticker",
        img: "/logo-card.png",
        description: "Stick it wherever truth is needed.",
        link: "https://yourshoplink.com",
      }
    ]
  }
];
---

<style>
  .container {
    display: flex;
    gap: 2rem;
    padding: 2rem;
  }

  .sidebar {
    width: 200px;
    background-color: #111;
    padding: 1rem;
    border-radius: 10px;
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  .sidebar a {
    display: block;
    color: white;
    margin-bottom: 1rem;
    text-decoration: none;
    font-weight: bold;
  }

  .content {
    flex: 1;
  }

  h2 {
    color: white;
    margin-top: 2rem;
    border-bottom: 1px solid #444;
    padding-bottom: 0.5rem;
  }

  .grid {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .product {
    width: 250px;
    background-color: #111;
    border-radius: 10px;
    padding: 1rem;
    color: white;
    text-align: center;
  }

  .product img {
    width: 100%;
    border-radius: 6px;
  }

  .product p {
    font-size: 0.9rem;
    color: #ccc;
  }

  .product a {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background-color: white;
    color: black;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
  }
</style>

<MainLayout title="Store">
  <div class="container">
    <div class="sidebar">
      {campaigns.map(c => (
        <a href={`#${c.id}`}>{c.name}</a>
      ))}
    </div>
    <div class="content">
      {campaigns.map(c => (
        <>
          <h2 id={c.id}>{c.name}</h2>
          <div class="grid">
            {c.products.toReversed().map(p => (
              <div class="product">
                <img src={p.img} alt={p.title} />
                <h3>{p.title}</h3>
                <p>{p.description}</p>
                <a href={p.link} target="_blank">Buy Now</a>
              </div>
            ))}
          </div>
        </>
      ))}
    </div>
  </div>
</MainLayout>